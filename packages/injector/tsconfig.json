{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "src/",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "lib/",
    "removeComments": false,
    "types": [
      "reflect-metadata",
      "jest"
    ]
  },
  "exclude": [
    "../node_modules",
    "**/__test__/**"
  ]
}



